<Window x:Class="TelHai.Dotnet.PlayerProject.MVVM.SongEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.Dotnet.PlayerProject.MVVM"
        mc:Ignorable="d"
        Title="Edit Song Details" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,15,0">

            <TextBlock Text="Title:" FontWeight="Bold" />
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="3"/>

            <TextBlock Text="Artist:" FontWeight="Bold" />
            <TextBox Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="3"/>

            <TextBlock Text="Album:" FontWeight="Bold" />
            <TextBox Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,20" Padding="3"/>

            <TextBlock Text="Images (URLs):" FontWeight="Bold" Margin="0,0,0,5" />

            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding NewImageUrl, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Padding="3" />
                <Button Content="Add" Command="{Binding AddImageCommand}" Grid.Column="1" Width="50" Margin="5,0,0,0"/>
            </Grid>

            <ListBox ItemsSource="{Binding Images}" SelectedItem="{Binding SelectedImage}" Height="80" Margin="0,0,0,5" />
            <Button Content="Remove Selected Image" Command="{Binding RemoveImageCommand}" HorizontalAlignment="Right" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Height="30" IsCancel="True"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Background="#F0F0F0" VerticalAlignment="Top" Height="200">
            <Image Source="{Binding SelectedImage}" Stretch="Uniform" />
        </Border>

    </Grid>
</Window>
