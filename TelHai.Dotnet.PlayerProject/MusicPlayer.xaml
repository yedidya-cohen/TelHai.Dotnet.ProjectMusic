<Window x:Class="TelHai.Dotnet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.Dotnet.PlayerProject"
        mc:Ignorable="d"
        Title="Classroom Music Player" Height="450" Width="800"
        Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtCurrentSong" Text="No Song Selected" FontSize="20" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>

            <Slider x:Name="sliderProgress" IsMoveToPointEnabled="True" Margin="0,0,0,20"
                    PreviewMouseLeftButtonDown="Slider_DragStarted"
                    PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="STOP" Click="BtnStop_Click" Width="80" Height="40" Margin="5"/>
                <Button Content="PLAY" Click="BtnPlay_Click" Width="100" Height="40" Margin="5" FontWeight="Bold" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Volume " VerticalAlignment="Center"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150" ValueChanged="SliderVolume_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary" Grid.Row="1" Background="#333" Foreground="White" MouseDoubleClick="LstLibrary_MouseDoubleClick"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click"  Margin="5"/>
                <Button Content="Remove" Click="BtnRemove_Click" Margin="5"/>
                <Button x:Name="BtnSettings" Content="Settings" Click="BtnSettings_Click" Margin="2" Background="#555" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
